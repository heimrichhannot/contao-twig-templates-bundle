{% extends '@HeimrichHannotTwigTemplates/block/block_searchable.html.twig' %}

{% block content %}
    <ul>
        {% for file in files %}
            <li class="download-element ext-{{ file.extension|default }}">
                <a href="{{ file.href|default|raw }}" title="{{ file.title|default }}">{{ file.link|default }} <span class="size">({{ file.filesize|default }})</span></a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}